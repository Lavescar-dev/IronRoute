# ===========================================
# IronRoute Environment Configuration
# ===========================================
# Copy this file to .env and update values for your environment.
# On VPS: cp .env.example .env && nano .env

# Django Settings
# ----------------
SECRET_KEY=change-this-to-a-random-secret-key
DEBUG=False
ALLOWED_HOSTS=ironroute.lavescar.com.tr,localhost,127.0.0.1,backend

# Database (PostgreSQL)
# ----------------------
DB_NAME=ironroute_db
DB_USER=ironroute_user
DB_PASSWORD=ironroute_pass
DB_HOST=db
DB_PORT=5432

# CORS Settings
# --------------
CORS_ALLOWED_ORIGINS=http://ironroute.lavescar.com.tr,https://ironroute.lavescar.com.tr

# JWT Settings
# -------------
JWT_ACCESS_TOKEN_LIFETIME_DAYS=1
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Frontend URL (for redirects)
# ----------------------------
FRONTEND_URL=http://ironroute.lavescar.com.tr
