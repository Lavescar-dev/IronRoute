# ===========================================
# IronRoute-Core Environment Configuration
# ===========================================
# This file is used directly by docker-compose for development
# For production, copy to .env and modify values accordingly

# Django Settings
# ----------------
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,backend

# Database (PostgreSQL)
# ----------------------
DB_NAME=ironroute_db
DB_USER=ironroute_user
DB_PASSWORD=ironroute_pass
DB_HOST=db
DB_PORT=5432

# CORS Settings
# --------------
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# JWT Settings
# -------------
JWT_ACCESS_TOKEN_LIFETIME_DAYS=1
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Frontend URL (for redirects)
# ----------------------------
FRONTEND_URL=http://localhost:5173
