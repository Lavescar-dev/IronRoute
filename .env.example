# ===========================================
# IronRoute-Core Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Django Settings
# ----------------
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
# ----------------------
DB_NAME=ironroute_db
DB_USER=ironroute_user
DB_PASSWORD=ironroute_pass
DB_HOST=db
DB_PORT=5432

# CORS Settings
# --------------
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# JWT Settings
# -------------
JWT_ACCESS_TOKEN_LIFETIME_DAYS=1
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Frontend URL (for redirects)
# ----------------------------
FRONTEND_URL=http://localhost:5173
